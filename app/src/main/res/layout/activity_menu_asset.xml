<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efecec"
    android:padding="15dp"
    tools:context=".MenuAssetActivity">

    <!--เลื่อนลง-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--Image Banner-->
            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_prospec" />

            <!--Prospec Appraisal-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Prospec Appraisal"
                android:textAlignment="center"
                android:textColor="@color/colorBack"
                android:textSize="@dimen/size_from_main1"
                android:textStyle="bold" />

            <!--บริษัท โปรสเปค แอพเพรซัล จำกัด-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="บริษัท โปรสเปค แอพเพรซัล จำกัด"
                android:textAlignment="center"
                android:textColor="@color/colorBack"
                android:textSize="@dimen/size_from"
                android:textStyle="bold" />

            <!--ส่งงานประเมิน-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="ส่งงานประเมิน"
                android:textAlignment="center"
                android:textColor="@color/colorBack"
                android:textSize="@dimen/size_from"
                android:textStyle="bold" />

            <!--ปุ่ม ที่ดิน-->
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_button"
                android:text="ที่ดินเปล่า"
                android:textSize="@dimen/size_from22"
                android:textStyle="bold" />

            <!--ปุ่ม ที่ดินพร้อมสิ่งปลูกสร้าง-->
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_button"
                android:text="ที่ดินพร้อมสิ่งปลูกสร้าง"
                android:textSize="@dimen/size_from22"
                android:textStyle="bold" />


            <!--ปุ่ม ห้องชุด-->
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_button"
                android:text="ห้องชุด"
                android:textSize="@dimen/size_from22"
                android:textStyle="bold" />

            <!--ปุ่ม ที่ดินเปล่า(สัญญาเช่า)-->
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_liner"
                android:text="ที่ดินเปล่า(สัญญาเช่า)"
                android:textSize="@dimen/size_from22"
                android:textStyle="bold" />

            <!--ปุ่ม ที่ดินพร้อมสิ่งปลูกสร้าง(สัญญาเช่า)-->
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_liner"
                android:text="ที่ดินพร้อมสิ่งปลูกสร้าง(สัญญาเช่า)"
                android:textSize="@dimen/size_from22"
                android:textStyle="bold" />

            <!--ปุ่ม ห้องชุดหรือเช่าพื้นที่-->
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_liner"
                android:text="ห้องชุดหรือเช่าพื้นที่"
                android:textSize="@dimen/size_from22"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>







